
@{
    ViewBag.Title = "UnCompleted";
    Layout = "~/Views/LayoutPage.cshtml";
}

@using com.jiechengbao.admin.Models

<div class="navbar navbar-options">
    <div class="container">
        <form class="navbar-form navbar-left" method="post" action="/Order/UnCompleted" role="search">
            <div class="form-group">
                <input type="text" name="condition" class="form-control" placeholder="搜索">
            </div>
            <button type="submit" class="btn btn-default">搜索</button>
        </form>
    </div>
</div>
<div class="container">
    <label>未完成的订单</label>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>订单号</th>
                <th>用户名</th>
                <th>购买的商品/服务</th>
                <th>状态</th>
                <th>订单总价</th>
                <th>支付方式</th>
                <th>订单提交时间</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewData["CompletedOrderList"] as IEnumerable<OrderModel>)
            {
                <tr>
                    <td>@item.OrderNo</td>
                    <td>@item.MemberName</td>
                    <td>@item.GoodsNameList</td>

                    
                    @if (item.Status == 1)
                    {
                        <td>已完成</td>
                    }
                    else
                    {
                        <td>未完成</td>
                    }
                    @if (item.Status == 0)
                    {
                        <td>￥ @item.TotalPrice</td>
                        <td>微信支付</td>
                    }
                    else
                    {
                        <td>@item.TotalPrice 积分</td>
                        <td>积分支付</td>
                    }
                    <td>@item.CreatedTime</td>
                </tr>
            }
        </tbody>
    </table>
</div>
