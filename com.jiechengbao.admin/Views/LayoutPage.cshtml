<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrapValidator.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-table-expandable.css" rel="stylesheet" />
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/bootstrapValidator.min.js"></script>
    <script src="~/Content/js/bootstrap-table-expandable.js"></script>
    <style>
        html body {
            font-family: 'Microsoft YaHei';
            width:100%;
            height:100%;
            padding:0;
            margin:0;
        }

            html body a {
                color: #000;
            }

        .page-header {
            margin: 0px;
        }

        .header {
            padding-bottom: 20px;
        }

        .active {
            background: #EEEEEE;
        }

        .footer {
            margin-top: 100px;
            text-align: center;
        }

        .navbar {
            margin-bottom: 10px;
        }

        .alert-error {
            background-color: #F2DEDE;
            border-width: 1px;
            border-radius: 3px;
            border-style: solid;
            border-color: #EED3D7;
            color: #B94A48;
        }
        img{
            max-height:56px;
            max-width:56px;
        }
        
    .mask {
        position: relative;
        z-index: 999;
        opacity: 0.6;
        filter: alpha(opacity: 50);
        top: 0;
        width: 100% !important;
        height: 100% !important;
        text-align: center;
        vertical-align:middle;
        background:#808080;
    }
    .mask .div-image{
        width:50px;
        height:50px;
        margin:0 auto;
    }
        .mask .div-image img {
            margin:0 auto;
        }
    </style>
</head>
<body>
    <div class="mask" hidden>
        <div class="div-image"><img src="~/Content/images/waiting.gif" /></div>
    </div>
    <div class="container-fluid header">
        <div class="page-header">
            <h2><strong>捷诚宝</strong> <small>管理后台</small></h2>
        </div>
    </div>
    <div class="navbar">
