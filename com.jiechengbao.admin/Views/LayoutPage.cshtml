            <ul class="nav navbar-nav">
                <li class="nav-li-home">
                    <a href="/Home/Index">首页</a>
                </li>
                <li class="nav-li-home">
                    <a href="/Member/List">会员管理</a>
                </li>

                <li class="nav-li-home">
                    <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">订单管理</a>
                    <ul class="dropdown-menu">
                        <li><a href="/Order/Completed">已完成订单</a></li>
                        <li><a href="/Order/UnCompleted">未完成订单</a></li>
                    </ul>
                </li>
                <li class="nav-li-home">
                    <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">商品管理</a>
                    <ul class="dropdown-menu">
                        <li><a href="/Goods/List">商品列表</a></li>
                        <li><a href="/Goods/Add">添加商品</a></li>
                    </ul>
                </li>
                <li class="nav-li-home">
                    <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">商品分类</a>
                    <ul class="dropdown-menu">
                        <li><a href="/Category/List">分类列表</a></li>
                        <li><a href="/Category/Editor">编辑分类</a></li>
                    </ul>
                </li>
                <li class="nav-li-home">
                    <a href="/Car/List">客户的爱车</a>
                </li>
                <li class="nav-li-home">
                    <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">服务管理</a>
                    <ul class="dropdown-menu">
                        <li><a href="/Service/List">服务购买情况</a></li>
                        <li><a href="/Service/PasswordSetting">设置服务消费密码</a></li>
                    </ul>
                </li>

