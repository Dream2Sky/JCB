                @*<li class="nav-li-home">
                    <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">积分兑换管理</a>
                    <ul class="dropdown-menu">
                        <li><a href="/CreditMoll/List">积分兑换商品列表</a></li>
                        <li><a href="/CreditMoll/Add">添加积分兑换商品</a></li>
                    </ul>
                </li>*@
                <li class="nav-li-home">
                    <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">在线预约</a>
                    <ul class="dropdown-menu">
                        <li><a href="/Appointment/Setting">预约设置</a></li>
                        <li><a href="/Appointment/List">会员的预约</a></li>
                    </ul>
                </li>
                <li class="nav-li-home">
                    <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">系统设置</a>
                    <ul class="dropdown-menu">
                        <li><a href="/Member/VIPSetting">VIP规则设置</a></li>
                        <li><a href="/Account/ResetPassword">账户设置</a></li>
                    </ul>
                </li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="/Account/Logout">退出登录</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <div class="container-fluid footer">
        <hr />
        <p><a href="#">捷诚宝</a></p>
    </div>

