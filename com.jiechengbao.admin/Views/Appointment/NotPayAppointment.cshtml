<script>
    function Pay(Id) {
        alert(Id);
        $.ajax({
            url: "/Appointment/Pay",
            type: "POST",
            data: {
                Id: Id,
                Price: $("input[name='Price']").val(),
                Notes: $("input[name='Notes']").val()
            },
            success: function (data) {
                if (data == "False") {
                    alert("更改数据失败");
                }
                else {
                    $('#' + Id).text(data.Price);
                    $('#note_' + Id).text(data.Notes);
                }
            },
            error: function () {
                alert("系统错误，更改数据失败");
            }
        })
    }
</script>
