    .over {
        max-height: 580px;
        overflow: auto;
        position: relative;
        left: 14px;
    }
    
    .list {
        width: 87.5%!important;
    }
    /*按钮*/
    
    .btnu {
        border: 1px solid #d2d2d2;
        border-radius: 4px;
        background: #fff;
        height: 34px;
        width: 90px;
    }
    /*输入框*/
    
    .test {
        display: block;
        height: 34px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin: 0px auto;
    }
    .msg {
        text-align:center;
    }
</style>
<ol class="breadcrumb">
    <li><a href="/Home/Index">管理后台</a></li>
    <li class="active">未完成预约列表</li>
</ol>
<div class="container-fluid">
    <div class="from-group">
        <input type="text" class="form-control" name="name" value="" placeholder="会员昵称" />
    </div>
    <button type="submit" class="btn btn-danger">搜索</button>
</div>
<div class="container-fluid">
    <div class="col-md-12 title list">
        未完成预约单
    </div>
</div>

<div class="container-fluid over">
    @{
        if (ViewData["NOPayAppointmentList"] != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>会员</th>
                        <th>车牌号</th>
                        <th>车型信息</th>
                        <th>预约服务列表</th>
                        <th>预约时间</th>
                        <th>问题补充</th>
                        <th>支付金额</th>
                        <th>备注</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewData["NOPayAppointmentList"] as IEnumerable<MyAppointmentModel>)
                    {
                        <tr>
                            <td><img src="@item.HeadImage" />@item.NickName</td>
                            <td>@item.CarNumber</td>
                            <td>@item.CarInfo</td>
                            <td>
                                <h5><strong>预约服务列表</strong></h5>
                                <small>
                                    @foreach (var appName in item.AppointmentNameList)
                                    {
                                        @(appName + ",")
                                    }
                                </small>
                            </td>
                            <td>
                                <h5><strong>问题补充</strong></h5>
                                <small>@item.Supplement</small>
                            </td>
                            <td>@item.AppointmentTime</td>
                            <td id="@item.MyAppointmentId">
                                <div class="input-group">
                                    <input type="text" name="Price" class="form-control" placeholder="价钱" value="">
                                </div>
                            </td>
                            <td id="note_@item.MyAppointmentId">
                                <div class="input-group">
                                    <input type="text" name="Notes" class="form-control" placeholder="备注" value="">
                                </div>
                            </td>
                            <td>
                                <button class="btn btn-default" type="button" onclick="Pay('@item.MyAppointmentId');">确认付款</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="msg">暂无未支付的预约单</div>
        }
    }
</div>

