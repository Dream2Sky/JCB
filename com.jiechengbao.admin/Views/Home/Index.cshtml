
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/LayoutPage.cshtml";
}
@using com.jiechengbao.entity
@using com.jiechengbao.admin.Models
<style>
    .nav li{
        margin-right:10px;
    }
</style>
<div class="navbar">
    <div class="container">
        <ul class="nav navbar-nav">
            <li class="nav-li-home">
                <button class="btn btn-default">当前注册用户数量<h2>@ViewBag.MemberCount</h2></button>
            </li>
            <li class="nav-li-home">
                <button class="btn btn-default">新提交订单数量<h2>@ViewBag.OrderCount</h2></button>
            </li>
        </ul>
    </div>
</div>

<div class="container">
    <label>昨日新注册的用户</label>
    <table class="table table-striped table-hover table-expandable table-bordered">
        <thead>
            <tr>
                <th>用户昵称</th>
                <th>用户手机</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewData["MemberList"] as IEnumerable<Member>)
            {
                <tr>
                    <td><img src="@item.HeadImage" />@item.NickeName</td>
                    <td>@item.Phone</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="container">
    <label>昨日新提交的订单</label>
    <table class="table table-striped table-hover table-expandable table-bordered">
        <thead>
            <tr>
                <th>订单号</th>
                <th>用户名</th>
                <th>状态</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewData["OrderList"] as IEnumerable<OrderModel>)
            {
                <tr>
                    <td>@item.OrderNo</td>
                    <td>@item.MemberName</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>