@* /Goods/List *@
@{
    ViewBag.Title = "List";
    Layout = "~/Views/LayoutPage.cshtml";
}
@using com.jiechengbao.admin.Models

<style>
    img{
        width:32px;
        height:32px;
    }
</style>
<div class="container">
    <label>商品列表</label>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>商品名称</th>
                <th>商品图片</th>
                <th>当前单价</th>
                <th>当前折扣</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewData["GoodsList"] as IEnumerable<GoodsModel>)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><img src="/Uploads/@item.PicturePath" /></td>
                    <td>@item.Price</td>
                    <td>@item.Discount</td>
                    <td><a href="/Goods/Update?GoodsCode=@item.Code">编辑</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>