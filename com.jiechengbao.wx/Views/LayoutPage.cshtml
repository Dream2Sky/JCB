    <style>
        a:hover {
            text-decoration: none;
        }

        .navbar-fixed-bottom {
            height: 32px;
        }

            .navbar-fixed-bottom button {
                border-radius: 0px;
                border: none;
                background-color: #e5e3e3;
            }

        .hasOrders {
            display: block;
            background: #f00;
            border-radius: 50%;
            width: 8px;
            height: 8px;
            top: 10px;
            right: 20px;
            position: absolute;
        }

        .mui-bar-nav {
            background-color: #ffffff;
        }

        .navbar-badge {
            width: 15px;
            height: 15px;
        }

        #popover {
            height: 130px;
            width: 130px;
            padding: 0px;
        }

            #popover .mui-scroll-wrapper, #popover-address .mui-scroll-wrapper {
                margin-top: 0px;
                margin-bottom: 0px;
                background-color: #fff;
            }

                #popover .mui-scroll-wrapper ul, #popover .mui-scroll-wrapper ul li,
                #popover-address .mui-scroll-wrapper ul,
                #popover-address .mui-scroll-wrapper ul li {
                    background-color: #fff;
                }

                    #popover .mui-scroll-wrapper ul li a, #popover-address .mui-scroll-wrapper ul li a {
                        border: none;
                        text-decoration: none;
                    }

        #popover-address {
            height: 60px;
            width: 130px;
            padding: 0px;
        }

        .navbar-fixed-top a .mui-icon {
            width: 20px;
            height: 20px;
        }

        .mask {
            position: absolute;
            z-index: 900;
            opacity: 0.6;
            filter: alpha(opacity: 50);
            top: 0;
            width: 100%;
            height: 100%;
            text-align: center;
        }

        .icon-loading {
            position: absolute;
            top: 50%;
        }

            .icon-loading span {
                color: #FFFFFF;
            }
        /*.mui-content{
