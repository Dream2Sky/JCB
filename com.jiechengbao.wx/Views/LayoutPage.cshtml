<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <style>
        .navbar-fixed-bottom {
            height: 32px;
        }

            .navbar-fixed-bottom button {
                border-radius: 0px;
                border: none;
                background-color: #e5e3e3;
            }

        .hasOrders {
            display: block;
            background: #f00;
            border-radius: 50%;
            width: 8px;
            height: 8px;
            top: 10px;
            right: 20px;
            position: absolute;
        }
    </style>
</head>
<body>
    <div>
        @RenderBody()
    </div>

    <nav class="navbar navbar-fixed-bottom">
        <div class="container">
            <div class="row">
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <div class="btn-group" role="group">
                        <button type="button" id="btn_home" class="btn btn-default" onclick="javascript:window.location='/Home/Index'">
                            <img style="width:20px;height:20px;" src="~/Content/images/home.png">
                            <p><small>首页</small></p>
                        </button>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" id="btn_shopping" class="btn btn-default" onclick="javascript:window.location='/Cart/List'">
                            <img style="width:20px;height:20px;" src="~/Content/images/cart.png">
                            <p id="img_shoppingCar"><small>购物车</small></p>
                        </button>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" id="btn_car" class="btn btn-default" onclick="javascript:window.location='/Order/List'">
                            <img id="img_shoppingCar" style="width:20px;height:20px;" src="~/Content/images/order.png">
                            <p><small>订单</small></p>
                        </button>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" id="btn_user" class="btn btn-default" onclick="javascript:window.location='/Setting/Index'">
                            <img style="width:20px;height:20px;" src="~/Content/images/user.png">
                            <p><small>设置</small></p>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</body>
</html>
