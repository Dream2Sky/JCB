<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/iconfont.css" rel="stylesheet" />
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <style>
        .navbar-fixed-bottom {
            height: 32px;
        }

            .navbar-fixed-bottom button {
                border-radius: 0px;
                border: none;
                background-color: #e5e3e3;
            }

        .hasOrders {
            display: block;
            background: #f00;
            border-radius: 50%;
            width: 8px;
            height: 8px;
            top: 10px;
            right: 20px;
            position: absolute;
        }
    </style>
</head>
<body>
    <header class="mui-bar mui-bar-nav">
        <h1 class="mui-title">@ViewBag.Title</h1>
    </header>
    <div class="mui-content mui-scroll-wrapper">
        <div class="mui-scroll">
            @RenderBody()
            <div style="display: block; height: 100px;"></div>
        </div>
    </div>
    <nav class="mui-bar mui-bar-tab">
        <a class="mui-tab-item mui-active">
            <span class="mui-icon iconfont icon-shouyeshouye"></span>
            <span class="mui-tab-label">首页</span>
        </a>
        <a class="mui-tab-item" href="Detail.html">
            <span class="mui-icon iconfont icon-dianpu"></span>
            <span class="mui-tab-label">商城</span>
        </a>
        <a class="mui-tab-item" href="#popover">
            <span class="mui-icon iconfont icon-car"></span>
            <span class="mui-tab-label">爱车</span>
        </a>
        <a class="mui-tab-item">
            <span class="mui-icon mui-icon-person"></span>
            <span class="mui-tab-label">个人</span>
        </a>
    </nav>
</body>
</html>
