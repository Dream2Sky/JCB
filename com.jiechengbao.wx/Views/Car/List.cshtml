
@{
    ViewBag.Title = "爱车管理";
    Layout = "~/Views/LayoutPage2.cshtml";
}
@using com.jiechengbao.entity

<style type="text/css">
    body {
        background-color: #fff !important;
    }

    .input-group {
        margin-top: 10px;
        padding-left: 10px;
        padding-right: 10px;
    }

    .blank_block {
        height: 100px;
    }

    .btn-yellow {
        color: #222;
        border: none;
    }

    .page-header {
        margin-bottom: 0px;
        margin-top: 0px;
        text-align: center;
        background-color: #fff !important;
    }

    .input-group-addon, .btn-check {
        background: #F18518;
        border-color: #F18518;
        color: #fff;
    }

    .li-provice {
        width: 50%;
        height: 150px;
    }

        .li-provice li {
            float: left;
        }

