    </div>

    <div class="input-group">
        <span class="input-group-btn">
            <button class="btn btn-default btn-yellow" type="button">车辆信息</button>
        </span>
        <input type="text" placeholder="*请输入您的爱车的信息">
    </div>

    <div>
        <button id="sub" type="button">立即绑定</button>
    </div>

</div>
<h5>
    <strong>您的爱车列表</strong>
</h5>
@if (ViewData["CarList"] == null || (ViewData["CarList"] as List<Car>).Count <= 0)
{
    <div class="title">暂无车辆信息。。。</div>
}
else
{
    <ul class="mui-table-view car-ul">
        @foreach (var item in ViewData["CarList"] as IEnumerable<Car>)
        {
            <li class="mui-table-view-cell">
                <a href="/Car/Detail?numberplate=@item.Numberplate">
                    <div class="mui-table">
                        <div class="mui-table-cell mui-col-xs-10">
                            <h4 class="mui-ellipsis">@item.Numberplate</h4>
                            <p>车型信息: @item.CarDetailInfo</p>
                            <p class="mui-h6 mui-ellipsis">车架号: @item.ChassisNumber &nbsp;&nbsp;&nbsp;&nbsp; 发动机号: @item.EngineNumber</p>
                        </div>
                        <div class="mui-table-cell mui-col-xs-2 mui-text-right">
                            <button class="mui-btn mui-btn-danger btn-edit" onclick="Edit(@item.Numberplate);">编辑信息</button>
                        </div>
                    </div>
                </a>
            </li>
        }
    </ul>
}
<div class="blank_block"></div>

<script>
    function AddCar() {
        var prov = $.trim($("#jcbprov").find("option:selected").val());
        var city = $.trim($("#jcbcity").find("option:selected").val());
        var carNum = $("input[name='Numberplate']").val();
        var ChassisNumber = $("input[name='ChassisNumber']").val();
        var EngineNumber = $("input[name='EngineNumber']").val();
        var CarInfo = $("input[name='CarDetailInfo']").val();

        var items = new Array("~", "`", "!", "@@", "#", "$", "%", "^", "&", "*", "{", "}", "[", "]", "(", ")");
        items.push(":", ";", "'", "|", "\\", "<", ">", "?", "/", "<<", ">>", "||", "//");

        if (carNum == undefined || ChassisNumber == undefined || EngineNumber == undefined || CarInfo == undefined) {
            mui.alert("提交信息不完整");
        }
        else if (carNum.length != 5) {
            mui.alert("车牌信息错误");
        }
        else if (ChassisNumber.length != 6) {
            mui.alert("车架信息错误");
        }
        else if (EngineNumber.length != 6) {
            mui.alert("发动机信息错误");
        }
        else {
            var tes = true;
            for (var i = 0; i < items.length; i++) {
                if (ChassisNumber.indexOf(items[i]) >= 0 || EngineNumber.indexOf(items[i]) >= 0 || CarInfo.indexOf(items[i]) >= 0 || carNum.indexOf(items[i]) >= 0) {
                    mui.alert("提交信息含有非法字符");
                    return false;
                }
            }
            if (tes) {
                $.ajax({
                    url: "/Car/Add",
                    type: "POST",
                    data: {
                        Numberplate: prov + city + carNum,
                        ChassisNumber: ChassisNumber,
                        EngineNumber: EngineNumber,
                        CarDetailInfo: CarInfo
                    },
                    success: function (data) {
                        if (data == "True") {
                            mui.alert("绑定成功");
                            $(".title").remove();
                            $(".car-ul").append("<li class=\"mui-table-view-cell\"><a href=\"/Car/Detail?numberplate='" + prov + city + carNum + "'\"><div class=\"mui-table\"><div class=\"mui-table-cell mui-col-xs-10\"><h4 class=\"mui-ellipsis\">" + prov + city + carNum + "</h4><p>车型信息: " + CarInfo + "</p><p class=\"mui-h6 mui-ellipsis\">车架号: " + ChassisNumber + " &nbsp;&nbsp;&nbsp;&nbsp; 发动机号: " + EngineNumber + "</p></div><div class=\"mui-table-cell mui-col-xs-2 mui-text-right\"><button class=\"mui-btn mui-btn-danger btn-edit\" onclick=\"Edit('" + prov + city + carNum + "');\">编辑信息</button></div></div></a></li>");
                        }
                        else {
                            mui.alert("绑定失败");
                        }
                    },
                    beforeSend: function () {
                        $('.mask').show();
                    },
                    error: function () {
                        mui.alert("ERROR");
                    },
                    complete: function () {
                        $('.mask').hide();
                    }
                });
            }
        }
    }

    $(document).ready(function () {
        $("#atocar").addClass("mui-active");
        var div_wid = $(".input-group").width();
        var btn_wid = $("#btn").width() + 24;
        var inp_wid = div_wid - btn_wid - 10;
        $("input").css({
            "width": inp_wid
        });
        $(".btn").css({
            "width": btn_wid
        });

        window.onresize = function () {
            var div_wid = $(".input-group").width();
            var btn_wid = $("#btn").width() + 24;
            var inp_wid = div_wid - btn_wid - 10;
            $("input").css({
                "width": inp_wid
            });
            $(".btn").css({
                "width": btn_wid
            });
        }
    });
</script>