
@{
    ViewBag.Title = "个人信息";
    Layout = "~/Views/LayoutPage2.cshtml";
}
@model com.jiechengbao.entity.Member
<style>
    html,
    body {
        background-color: #efeff4;
    }

    .mui-table-view {
        margin-top: 20px;
    }

        .mui-table-view span.mui-pull-right {
            color: #999;
        }

    .head-img {
        width: 56px;
        height: 56px;
    }

    .recharge-btn {
        width: 100%;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .recharge-li {
        padding-left: 10px;
        padding-right: 10px;
    }

    .toleft {
        margin-right: 20px;
    }
</style>
<ul class="mui-table-view mui-table-view-chevron">
    <li class="mui-table-view-cell mui-media">
        <a class="mui-navigate-right" href="/UserInfo/MyQrCode">
            <img class="mui-media-object mui-pull-left head-img" id="head-img" src="@Model.HeadImage">
            <div class="mui-media-body">
                @Model.NickeName
                @if (Model.Vip == 0)
                {
                    <p>普通会员</p>
                }
                else
                {
                    <p>VIP: @Model.Vip</p>
                }
            </div>
        </a>
    </li>
</ul>

<ul class="mui-table-view">
    <li class="mui-table-view-cell">
        @if (string.IsNullOrEmpty(Model.Phone))
        {
            <a href="/UserInfo/Phone" class="mui-navigate-right">电话<span class="mui-pull-right toleft">未绑定</span></a>
        }
        else
        {
            <a href="/UserInfo/Phone" class="mui-navigate-right">电话<span class="mui-pull-right toleft">@Model.Phone</span></a>
        }

    </li>
</ul>

<ul class="mui-table-view">
    <li class="mui-table-view-cell">
        <a href="/UserInfo/MyServices" class="mui-navigate-right">已购买的服务</a>
    </li>
    <li class="mui-table-view-cell">
        <a href="/UserInfo/MyCreditRecord?currentCredit=@Model.Credit" class="mui-navigate-right">我的积分<span class="mui-pull-right toleft">@Model.Credit</span></a>
    </li>
    <li class="mui-table-view-cell">
        <a href="/Appointment/List" class="mui-navigate-right">我的预约<span class="mui-pull-right"></span></a>
    </li>
    <li class="mui-table-view-cell">
        <a href="/Car/CarList" class="mui-navigate-right">我的爱车<span class="mui-pull-right"></span></a>
    </li>
</ul>

@*<ul class="mui-table-view">
    <li class="mui-table-view-cell">
        <a href="/UserInfo/MyLocation">我的定位</a>
    </li>
</ul>*@

<ul class="mui-table-view">
    <li class="recharge-li">
        <button class="mui-btn recharge-btn mui-btn-danger" onclick="Go('/UserInfo/RechargeOptionsList')">充值</button>
    </li>
</ul>

<script>
    function Go(url) {
        window.location.href = url;
    }
    $(document).ready(function () {
        $("#atoinfo").addClass("mui-active");
    })
</script>
