
@{
    ViewBag.Title = "添加配送地址";
    Layout = "~/Views/LayoutPage.cshtml";
}
<script src="~/Content/js/city.data-3.js"></script>
<style>
    .mui-bar-nav {
        background-color: #FFFFFF;
    }

    .mui-content {
        margin-top: 5px;
    }

    .input-cell {
        padding-top: 3px;
        padding-bottom: 3px;
    }

    #showCityPicker3 {
        height: 46px;
    }

    #cityResult3 {
        margin-left: 1px;
    }

    .mui-btn-block {
        padding: 10px;
        font-size: 15px;
        margin-top: 10px;
    }
</style>
<ul class="mui-table-view">
    <li class="mui-table-view-cell input-cell">
        <div class="mui-input-row">
            <label>收货人</label>
            <input type="text" name="consignee" placeholder="收货人">
        </div>
    </li>
    <li class="mui-table-view-cell input-cell">
        <div class="mui-input-row">
            <label>联系电话</label>
            <input type="text" name="phone" placeholder="联系电话">
        </div>
    </li>
    <li class="mui-table-view-cell" id="showCityPicker3">
        <a class="mui-navigate-right" id="cityResult3" name="area">
            所在地区
        </a>
    </li>
    <li class="mui-table-view-cell input-cell">
        <div class="mui-input-row">
            <label>详细地址</label>
            <input type="text" placeholder="详细地址" name="detail">
        </div>
    </li>
</ul>
<button type="button" class="mui-btn mui-btn-danger mui-btn-block" onclick="Save();">修改并保存</button>
<script>
    mui('.mui-scroll-wrapper').scroll();
    (function ($, doc) {
        $.init();
        $.ready(function () {
            var cityPicker3 = new $.PopPicker({
                layer: 3
            });
            cityPicker3.setData(cityData3);
            var showCityPickerButton = doc.getElementById('showCityPicker3');
            var cityResult3 = doc.getElementById('cityResult3');
            showCityPickerButton.addEventListener('tap', function (event) {
                cityPicker3.show(function (items) {
                    cityResult3.innerText = "所在地区: " + (items[0] || {}).text + "," + (items[1] || {}).text + "," + (items[2] || {}).text;
                });
            }, false);
        });
    })(mui, document);
</script>
<script>
    function Save() {
        var area = $("a[name='area']").html();
        console.log(area);
        area = area.substring(5);
        var array = area.split(',');
        var pro = array[0];
        console.log(pro);

        var city = array[1];
        console.log(city);

        var county = array[2];
        console.log(county);
        $.ajax({
            url: "/Address/Add",
            type: "POST",
            data: {
                Province: pro,
                City: city,
                county: county,
                Consignee: $("input[name='consignee']").val(),
                Phone: $("input[name='phone']").val(),
                Detail: $("input[name='detail']").val()
            },
            success: function (data) {
                if (data == "False") {
                    mui.alert("保存地址发生错误");
                }
                else {
                    window.location.href = "/Cart/List";
                }
            },
            error: function () {
                mui.alert("Error");
            }
        });
    }
</script>