
@{
    ViewBag.Title = "我的服务二维码";
    Layout = "~/Views/LayoutPage2.cshtml";
}

@using com.jiechengbao.entity
<style>
    .mui-content-padded {
        text-align: center;
    }
    .mui-content-padded p{
        margin-top:20px;
    }
    .qrView {
        max-height: 250px;
        max-width: 250px;
    }
</style>
@{ 
    MyService ms = ViewBag.Service as MyService;
}
<div class="mui-content-padded">
    <ul class="mui-table-view mui-table-view-striped mui-table-view-condensed">
        <li class="mui-table-view-cell">
            <div class="mui-table">
                <div class="mui-table-cell mui-col-xs-10">
                    <h4 class="mui-ellipsis">@ms.GoodsName</h4>
                    <p class="mui-h6 mui-ellipsis">购买时间 @ms.CreatedTime</p>
                </div>
            </div>
        </li>
    </ul>
    <p>
        <img class="qrView" src="/QR/@ViewBag.QrPath" />
    </p>
</div>

<script>

    $(document).ready(function () {
        $("#atoinfo").addClass("mui-active");
        
        window.setInterval(function () {
            $.ajax({
                url: "/Comet/IsConsume",
                type: "POST",
                success: function (data) {
                    if (data) {
                        mui.toast("消费成功");
                        window.location.href = "/UserInfo/Info";
                    }
                }
            });

        }, 3000);
       
    })
</script>