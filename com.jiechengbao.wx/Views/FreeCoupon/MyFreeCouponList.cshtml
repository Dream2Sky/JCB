
@{
    ViewBag.Title = "MyFreeCouponList";
    Layout = "~/Views/LayoutPage2.cshtml";
}
@using com.jiechengbao.wx.Models

@if (ViewData["MyFreeCouponModelList"] == null || (ViewData["MyFreeCouponModelList"] as List<MyAppointmentListModel>).Count <= 0)
{
    <p class="title">您还没有领取任何优惠券</p>
}
else
{
    <ul class="mui-table-view mui-table-view-striped mui-table-view-condensed">
        @foreach (var item in ViewData["MyFreeCouponModelList"] as List<MyFreeCouponModel>)
        {
            <li class="mui-table-view-cell" id="@item.myFreeCouponId">
                <div class="mui-table">
                    <div class="mui-table-cell mui-col-xs-10">
                        <h4 class="mui-ellipsis">@item.FreeCouponName</h4>
                        <h5>@item.Price</h5>
                        <p class="mui-h6 mui-ellipsis">@item.Descritption</p>
                    </div>
                    <div class="mui-table-cell mui-col-xs-2 mui-text-right">
                        <span class="mui-h5">@item.CreatedTime</span>
                    </div>
                </div>
            </li>
        }   
    </ul>
}

<script>
    $(".mui-table-view-cell").on("tap", function() {
        var myFreeCouponId = $(this).attr("id");
        window.location.href = "/FreeCoupon/MyFreeCouponQR?myFreeCouponId=" + myFreeCouponId;
    })
</script>
