
@{
    ViewBag.Title = "商品兑换";
    Layout = "~/Views/LayoutPage2.cshtml";
}
@model com.jiechengbao.entity.ExchangeServiceQR
<style>
    .mui-content-padded {
        text-align: center;
    }

    .qrView {
        max-height: 250px;
        max-width: 250px;
        margin-top: 20px;
    }
</style>
<div class="mui-content-padded">
    <ul class="mui-table-view mui-table-view-striped mui-table-view-condensed">
        <li class="mui-table-view-cell">
            <div class="mui-table">
                <div class="mui-table-cell mui-col-xs-10">
                    <h4 class="mui-ellipsis">@ViewBag.ServiceName</h4>
                    <p class="mui-h6 mui-ellipsis">购买时间: @ViewBag.CreateTime</p>
                </div>
            </div>
        </li>
    </ul>
    <p>
        <img class="qrView" src="~/ExchangeQR/@Model.QRPath" />
    </p>
</div>