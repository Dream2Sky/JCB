
@{
    ViewBag.Title = "MyCreditServices";
    Layout = "~/Views/LayoutPage2.cshtml";
}

@using com.jiechengbao.wx.Models
<style>
    .title {
        margin: 20px 15px 10px;
        color: #6d6d72;
        font-size: 15px;
    }
</style>

<ul class="mui-table-view goods-ul">
    <li class="mui-table-view-cell">
        <small>积分商品列表</small>
    </li>
    @foreach (var item in ViewData["MyCreditServices"] as List<ExchangeServiceListModel>)
    {
        <li class="mui-table-view-cell mui-media">
            <a href="/Pay/MyExchangeServiceQR?ExchangeServiceRecordId=@item.ExchangeServiceRecordId">
                <img class="mui-media-object mui-pull-left" src="/Uploads/@item.ImagePath">
                <div class="mui-media-body">
                    <ul class="mui-table-view mui-table-view-striped mui-table-view-condensed goods-view">
                        <li class="mui-table-view-cell goods-cell">
                            <div class="mui-table name-cell">
                                <div class="mui-table-cell mui-col-xs-8">
                                    <p class="mui-ellipsis">@item.ExchangeServiceName</p>
                                </div>
                            </div>
                            <div class="mui-table address-cell">
                                <div class="mui-table-cell mui-col-xs-12">
                                    <p class="mui-h6 mui-ellipsis">购买时间:@item.CreatedTime</p>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </a>
        </li>
    }
</ul>
@if ((ViewData["MyCreditServices"] as List<ExchangeServiceListModel>) == null)
{
    <div class="title">
        <p>您暂时还没有兑换任何商品，快去积分商城的兑换吧。。。</p>
    </div>
}