
@model com.jiechengbao.entity.Member
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width">
    <script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
    <title>我的二维码</title>
</head>
<style>
    body {
        margin: 15% 5%;
        background: #666;
    }

    .my-info {
        width: 100%;
        height: 100%;
        background: white;
        text-align: center;
        opacity: 0.95;
        border-radius: 3px;
    }

        .my-info img {
            margin: 3% 8% 3%;
            width: 84%;
        }

        .my-info p {
            color: #888;
            margin-top: 0px;
            font-size: 14px;
        }

    .user-show {
        padding: 3% 8% 0;
        overflow: hidden;
    }

    .show-img {
        width: 28%;
        height: auto;
        float: left;
        border-radius: 3px;
        overflow: hidden;
        position: relative;
        left: 2%;
    }

        .show-img img {
            width: 100%;
            height: auto;
            margin: 0px;
        }

    .show-na {
        width: 65%;
        float: left;
        text-align: left;
        padding-left: 5%;
    }

        .show-na h4 {
            font-size: 16px;
            margin: 10px 0px;
        }

        .show-na p {
            font-size: 13px;
        }
</style>
<script>
		$(document).ready(function(){
			window.onresize = function(){
				var wid = $(window).width();
				var hei = $(window).height();
				if(wid > hei){
					$("body").css({
						"padding":"2% 16%"
					});
				}else{
					$("body").css({
						"padding":"0"
					});
				}

			};
		});
		document.addEventListener('touchmove', function (e) { e.preventDefault() }, false);
</script>
<body>
    <div class="my-info">
        <div class="user-show">
            <div class="show-img">
                <img src="@Model.HeadImage" />
            </div>
            <div class="show-na">
                <h4>@Model.NickeName</h4>
                <p>@Model.Phone</p>
            </div>
        </div>
        <img src="~/Content/images/myqr.jpg" />
        <p><small>扫一扫上面的二维码图案，加我微信</small></p>
    </div>
</body>
</html>